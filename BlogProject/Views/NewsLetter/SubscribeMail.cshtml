<div class="tech-btm">
    <p>Teknoloji ve yazılım ağırlıklı olarak konu edinen bloglarımızdan haber alın! </p>
    <form method="post">
        <!-- name: Sql tablosu ismini verdik.-->
        <input type="email"  id="txtmail" name="Mail" class="tech-btm"/>
        <input type="submit" id="btn" value="Abone Ol!">
    </form>
</div>


<script type="text/javascript">
    $("#btn").click(function(){
        let values = {
            Mail: $("#txtmail").val()
        };

        $.ajax({
            type: "post",
            url: "/NewsLetter/SubscribeMail/",
            data: values,
            success:function(func){
                let result = jQuery.parseJSON(func);
            }
        });
    });
</script>

