@using X.PagedList
@using X.PagedList.Mvc.Core
@model IPagedList<EntityLayer.Concrete.Category>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kategori Listesi</h1>
<br />
<table class="table table-bordered">
    <tr>
        <th>#</th>
        <th>Kategori Adı</th>
        <th>Kategorinin Anlık Durumu</th>
        <th>Pasif Yap</th>
        <th>Aktif Yap</th>
        <th>Düzenle</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <th>@item.CategoryID</th>
            <td>@item.CategoryName</td>
            <td>@item.CategoryStatus</td>
            <td><a href="#" class="btn btn-danger"> Pasif Yap</a></td>
            <td><a href="#" class="btn btn-success"> Aktif Yap</a></td>
            <td><a href="#" class="btn btn-info"> Düzenle  </a></td>
        </tr>
    }
</table>
<br />
<!-- Controller icerisinde tanimladigimiz parametreyi degistiriyoruz. Bu sayede baslayacagi noktayi belirliyoruz. 1-4 / 4-7 gibi-->
@Html.PagedListPager((IPagedList)Model, page=>Url.Action("Index",new {page}))
